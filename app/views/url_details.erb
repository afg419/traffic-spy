<%= erb :_navbar_url, locals: { user: @user, local_url: @local_url } %>
<h1 id="url_details_header"><%= @id.capitalize %>'s <%= @local_url %> Page</h1>

<div class= "container">
<div class="row">
  <div class="col s4">
    <div class="card large" id="longest-response">
      <%= erb :_card_with_image, locals: {title: "Longest Response Time", details: @user.urls.longest_response_time } %>
    </div>
  </div>
  <div class="col s4">
    <div class="card large" id="shortest-response">
      <%= erb :_card_with_image, locals: {title: "Shortest Response Time", details: @user.urls.shortest_response_time } %>
    </div>
  </div>
  <div class="col s4">
    <div class="card large" id="average-response">
      <%= erb :_card_with_image, locals: {title: "Average Response Time", details: @user.urls.average_response_time } %>
    </div>
  </div>

  <div class="col s4">
    <div class="card large" id="verbs">
      <%= erb :_card_with_data, locals: {title: "Verbs Used", iteratable: @user.urls.verbs_used } %>
    </div>
  </div>
  <div class="col s4">
    <div class="card large" id="referrers">
      <%= erb :_card_with_data, locals: {title: "Most Popular Referrers", iteratable: @user.urls.most_popular_referrers } %>
    </div>
  </div>
  <div class="col s4">
    <div class="card large" id="agents">
      <%= erb :_card_with_data, locals: {title: "Most Popular User Agents", iteratable: @user.urls.most_popular_user_agents } %>
    </div>
  </div>
