<%= erb :_navbar_index, locals: { user: @user, id: @id } %>

<h1 id="app_details_header"><%= @user.identifier.capitalize %>'s Application Details</h1>

<div class= "container">
  <div class="row">

    <div class="col s12 m4">
      <div class="card large" id="requested-urls">
        <%= erb :_card_with_link, locals: {title: "Most to Least Requested URLS", iteratable: @user.urls.requested_urls } %>
      </div>
    </div>

    <div class="col s12 m4">
      <div class="card large" id="browser-breakdown">
        <%= erb :_card_with_data, locals: {title: "Web Browser Breakdown", iteratable: @user.urls.browser_breakdown } %>
      </div>
    </div>

    <div class="col s12 m4">
      <div class="card large" id="os-breakdown">
        <%= erb :_card_with_data, locals: {title: "Operating System Breakdown", iteratable: @user.urls.os_breakdown } %>
      </div>
    </div>

    <div class="col s12 m4">
      <div class="card large" id="screen-res">
        <%= erb :_card_with_data, locals: {title: "Screen Resolution", iteratable: @user.urls.resolution } %>
      </div>
    </div>

    <div class="col s12 m4">
      <div class="card large" id="response-time">
        <%= erb :_card_with_data, locals: {title: "Average Response Times per URL", iteratable: @user.urls.url_response_times } %>
      </div>
    </div>

    <div class="col s12 m4">
      <div class="card large" id="events">
        <div class="card-content">
          <ul>
            <% @user.payloads.events_by_popularity.each do |event_and_number|  %>
            <li>-
              <a class="list-links" href="/sources/<%= @user.identifier %>/events/<%= event_and_number.split(":")[0] %>">
                <%= event_and_number.split(":")[0] %>
              </a>: <%= event_and_number.split(":")[1] %>
            </li>
            <% end %>
          </ul>
        </div>
        <div class="card-action">
          <p class="card-details"><a href="/sources/<%= @user.identifier %>/events">Event Index</a></p>
        </div>
      </div>
    </div>


    <div class="col s2">
      <p>

      </p>
    </div>
  </div>
</div>
