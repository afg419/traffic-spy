<%= erb :_navbar_index, locals: { user: @user } %>

<h1 id="app_details_header"><%= @user.identifier.capitalize %>'s Application Details</h1>

<div class= "container">
  <div class="row">

    <div class="col s4">
      <div class="card large" id="requested-urls">
        <div class="card-content">
          <ul>
            <% @user.urls.requested_urls.each do |url|  %>
            <li>- <%= url %></li>
            <% end %>
          </ul>
        </div>
        <div class="card-action">
          <p class="card-details">Most to Least Requested URLS</p>
        </div>
      </div>
    </div>

    <div class="col s4">
      <div class="card large" id="browser-breakdown">
        <div class="card-content">
          <ul>
            <% @user.urls.browser_breakdown.each do |url|  %>
            <li>- <%= url %></li>
            <% end %>
          </ul>
        </div>
        <div class="card-action">
          <p class="card-details">Web Browser Breakdown</p>
        </div>
      </div>
    </div>

    <div class="col s4">
      <div class="card large" id="os-breakdown">
        <div class="card-content">
          <ul>
            <% @user.urls.os_breakdown.each do |url|  %>
            <li>- <%= url %></li>
            <% end %>
          </ul>
        </div>
        <div class="card-action">
          <p class="card-details">Operating System Breakdown</p>
        </div>
      </div>
    </div>

    <div class="col s2">
      <p>

      </p>
    </div>

    <div class="col s4">
      <div class="card large" id="screen-res">
        <div class="card-content">
          <ul>
            <% @user.urls.resolution.each do |url|  %>
            <li>- <%= url %></li>
            <% end %>
          </ul>
        </div>
        <div class="card-action">
          <p class="card-details">Screen Resolution</p>
        </div>
      </div>
    </div>

    <div class="col s4">
      <div class="card large" id="response-time">
        <div class="card-content">
          <ul>
            <% @user.urls.url_response_times.each do |url|  %>
            <li>- <%= url %></li>
            <% end %>
          </ul>
        </div>
        <div class="card-action">
          <p class="card-details">Average Response Times per URL</p>
        </div>
      </div>
    </div>

    <div class="col s2">
      <p>

      </p>
    </div>
  </div>
</div>

<br><br><h4>View Detailed Data for each of <%= @user.identifier.capitalize %>'s URLS:</h4><br><br>


<div class= "container">
  <div class="row">
    <div class="col s4">
      <p>

      </p>
    </div>
    <div class="col s4">
      <div class="card large">
        <div class="card-image">
          <img class="activator" src="/images/blue-eye.gif">
        </div>
        <div class="card-content">
          <p class="card-header"><% @user.urls.uniq.each do |url| %>
            <a id="card-link" href="/sources/<%= @user.identifier %>/urls/<%= url.url %>"><%= url.url %><br></a>
          <% end %></p>
        </div>
      </div>
    </div>
    <div class="col s4">
      <p>

      </p>
    </div>
  </div>
</div>


<br><br><a id="event-data-link" href="/sources/<%= @user.identifier %>/events"><h4>View Event Data for <%= @user.identifier.capitalize %></h4></a>
